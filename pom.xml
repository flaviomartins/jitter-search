        <lucene.version>5.5.5</lucene.version>

        <twitter4j.version>4.0.7-jitter</twitter4j.version>
        <hbc.version>2.2.2-jitter</hbc.version>

        <twitter-text.version>1.14.7</twitter-text.version>
        <ranklib.version>2.8</ranklib.version>
        <kstem.version>3.4</kstem.version>

        <rocksdbjni.version>5.7.2</rocksdbjni.version>

        <twittertools.version>1.4.6-SNAPSHOT</twittertools.version>
    </properties>

    <developers>
        <developer>
            <name>Flavio Martins</name>
            <email>flaviomartins@acm.org</email>
            <timezone>Europe/Lisbon</timezone>
            <roles>
                <role>architect</role>
            </roles>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@gitlab.com:flaviomartins/jitter-search.git</connection>
        <developerConnection>scm:git:git@gitlab.com:flaviomartins/jitter-search.git</developerConnection>
        <url>https://gitlab.com/flaviomartins/jitter-search</url>
    </scm>

    <issueManagement>
        <system>Gitlab</system>
        <url>https://gitlab.com/flaviomartins/jitter-search/issues</url>
    </issueManagement>

