        <commons-math3.version>3.5</commons-math3.version>
        <commons-io.version>2.4</commons-io.version>
        <jsr305.version>3.0.1</jsr305.version>
        <twittertools.version>1.4.3</twittertools.version>
        <ranklib.version>2.3</ranklib.version>
        <sqlite-jdbc.version>3.8.11.2</sqlite-jdbc.version>
        <je.version>6.4.9</je.version>
        <!--
           It is recommended to set the compiler version globally,
           as the compiler plugin and the forbidden API checker both
           use this version
        -->
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>

    <developers>
